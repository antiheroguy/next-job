{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"allowJs": true,
		"checkJs": false,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["./**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
